package greeter
import scala.annotation.tailrec

object TailRecursion {
  println("Welcome to the Scala worksheet")

  def gcd(a: Int, b: Int): Int =
    if (b == 0) a else gcd(b, a % b)

  gcd(14, 21)


  @tailrec
  def factorial(n: Int): Int =
    if (n == 0) 1 else n * factorial(n - 1)

  factorial(20000)
}