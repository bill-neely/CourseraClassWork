package greeter

object TailRecursion {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet

  def gcd(a: Int, b: Int): Int =
    if (b == 0) a else gcd(b, a % b)              //> gcd: (a: Int, b: Int)Int

  gcd(14, 21)                                     //> res0: Int = 7

  def factorial(n: Int): Int =
    if (n == 0) 1 else n * factorial(n - 1)       //> factorial: (n: Int)Int

  factorial(2000)                                 //> java.lang.StackOverflowError
                                                  //| 	at greeter.TailRecursion$$anonfun$main$1.factorial$1(greeter.TailRecursi
